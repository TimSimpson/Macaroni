# Root jam file for "pure" C++ version of Macaroni

import boost ;
boost.use-project 1.46.1 ;

alias sources
	:	[ glob-tree *.c	: .svn ]
		[ glob-tree *.cpp	: .svn *Test.cpp *Tests.cpp Main.cpp ]
		/boost//filesystem
		/boost//regex			
		/boost//system
	:	<include>./	
	;

exe macaroni 
	:	sources
		Main.cpp
		Macaroni.rc	
	:
		<include>./
		<target-os>linux:<define>MACARONI_COMPILE_TARGET_LINUX
		<target-os>windows:<define>MACARONI_COMPILE_TARGET_WINDOWS
	;