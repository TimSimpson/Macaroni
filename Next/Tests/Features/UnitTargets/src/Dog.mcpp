~unit "og/Dog";

~import std::string;

~namespace og;

class Dog
{
    ~import og::A_Dependency;

    int legs;

    public Dog()
    : a(),
      legs(4)
    {}

    public int GetLegs() const
    {
     return legs;
    }

    private A_Dependency a;
};

