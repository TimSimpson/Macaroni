~import std::string;
~import std::cin;

// One day, I could introduce the "module" keyword to deal with this.
// But ain't doing it now!

void SayHello(const string & greetingMessage)
{
	cin << "Hello. This is my greeting for you!\n";
	cin << greetingMessage;
}

void main()
{
	SayHello(string("I am MACARONI."));
}